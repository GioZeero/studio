rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: This rule is permissive and should not be used in production.
    // It allows any user to read and write to your entire database.
    // For production, you should implement more granular security rules.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
